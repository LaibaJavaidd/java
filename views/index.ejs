</head>
<body>
    <style>
        body{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

#chart {
  display: none;
  margin-top: 15rem;
  border: 1px solid black;
  width: 65rem;
  height: 40rem;
}

.spinner {
  display: inline-block;
  margin-top: 15rem;
  border: 16px solid #f3f3f3;
  border-top: 16px solid #393f43; 
  border-radius: 50%;
  width: 120px;
  height: 120px;
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

#btn{
    display: flex;
  margin-top: 2rem;
  flex-direction: row;
}
    </style>



<div id = 'btn'>
    
    <a href='stocks'><button type="button" class="btn btn-outline-secondary" >STOCKS</button></a>
    
        
        <input class="form-control " id='inputStock' type="search" placeholder="Search" >
        <button class="btn btn-outline-secondary " type="submit" onclick="getInput()">STOCK POINTS</button>
    
  
</div>

<canvas id="chart" width="1000" height="600"></canvas>


<div class="spinner" id="spin"></div>

<script src="scripts.js" defer></script>

<script>
    
    const canvas = document.getElementById('chart')
const ctx = canvas.getContext('2d')

function getInput(){
    const inputStock = document.getElementById('inputStock').value
    window.location.href = "stocks/"+inputStock;
}

function drawLine (start, end, style) {
  ctx.beginPath()
  ctx.strokeStyle = style || 'black'
  ctx.moveTo(...start)
  ctx.lineTo(...end)
  ctx.stroke()
}

function drawTriangle (apex1, apex2, apex3) {
  ctx.beginPath()
  ctx.moveTo(...apex1)
  ctx.lineTo(...apex2)
  ctx.lineTo(...apex3)
  ctx.fill()
}

drawLine([50, 50], [50, 550])
drawTriangle([35, 50], [65, 50], [50, 35])

drawLine([50, 550], [950, 550])
drawTriangle([950, 535], [950, 565], [965, 550])

window.onload = function(){
  setTimeout(()=>{document.getElementById("chart").style.display = "block";
  document.getElementById("spin").style.display = "none";}, 1000)
  
}
</script>
</body>
</html>